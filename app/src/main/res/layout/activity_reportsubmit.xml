<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportSubmit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#1a237e">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Report"
            android:textSize="35dp"
            android:textColor="#fffdd0"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:background="@drawable/border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/captureImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/camfinal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:hint="Click to take picture of today's work"
            android:textAlignment="center"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="358dp"
        android:background="#ebebeb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Today's Total Expenditure:"
            android:textAlignment="center"
            android:textColor="#1a237e"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/totalExpense"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:clickable="false"
            android:focusable="false"
            android:inputType="none"
            android:cursorVisible="false"
            android:ems="10" />

        <EditText
            android:id="@+id/nextProjectPlan"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Plan for next day"
            android:textColorHint="#1a237e"
            android:textSize="25dp"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report for date"
            android:textColor="#1a237e"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:clickable="false"
            android:focusable="false"
            android:inputType="none"
            android:cursorVisible="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#00227b"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submitButton"
            android:text="SUBMIT"
            android:textSize="35dp"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:textColor="#fffdd0"/>
    </LinearLayout>

</LinearLayout>